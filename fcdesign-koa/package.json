{
  "name": "fcdesign-koa",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "build:render": "yarn clean:render && yarn copy:render:tsconf && yarn compile:render",
    "clean:render": "npx rimraf ./dist/render",
    "copy:render:tsconf": "cp -r ./tsconfig.render.json ./render/tsconfig.json",
    "compile:render": "npx tsc -p ./render --outDir ./dist/render",
    "dev:render": "yarn build:render && npx concurrently \"IS_DEVELOPMENT=1 npx nodemon --watch ./render/ -e ts --inspect ./dist/render/bootstrap.js\" \"yarn watch:render\" \"yarn watch:vue\"",
    "watch:render": "chokidar \"./render/**/*.ts\" -c \"yarn compile:render\"",
    "watch:vue": "npx vue-tsc --noEmit && chokidar \"./client**/*.vue\" -c \"npx vue-tsc --noEmit\""
  },
  "dependencies": {
    "dotenv-safe": "^8.2.0",
    "koa": "^2.13.4",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^17.0.22",
    "@vitejs/plugin-vue": "^2.2.0",
    "chokidar-cli": "3.0.0",
    "concurrently": "7.0.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vue-tsc": "^0.29.8"
  }
}
