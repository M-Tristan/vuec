{
  "name": "fcdesign-koa",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "dev:server": "npm run compile:render && nodemon ./dist/render/server.js",
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/.js --outDir dist/server",
    "serve": "cross-env NODE_ENV=production node ./server.js",
    "compile:render": "npx tsc -p ./render --outDir ./dist/render"
  },
  "dependencies": {
    "express": "^4.17.3",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-connect": "^2.1.0",
    "koa-router": "^10.1.1",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-router": "^7.4.4",
    "@vitejs/plugin-vue": "^2.3.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.4",
    "vite": "^2.9.0",
    "vue-tsc": "^0.29.8"
  }
}